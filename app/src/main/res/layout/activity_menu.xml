<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textView_contactanos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/menu_activity" />

    <ImageView
        android:id="@+id/imageView_Entradas"
        android:layout_width="370dp"
        android:layout_height="125dp"
        android:src="@drawable/empanadas" />

    <Button
        android:id="@+id/button_Entradas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="conocerEntrada"
        android:text="@string/menu_entrada" />

    <ImageView
        android:id="@+id/imageViewplatofuerte"
        android:layout_width="370dp"
        android:layout_height="221dp"
        android:src="@drawable/platofuerte" />

    <Button
        android:id="@+id/button_Platos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ConocerPlatos"
        android:text="@string/menu_platos" />

    <ImageView
        android:id="@+id/imageView_Bebidas"
        android:layout_width="373dp"
        android:layout_height="166dp"
        android:src="@drawable/bebidas" />

    <Button
        android:id="@+id/button_Bebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ConocerBebidas"
        android:text="@string/menu_bebidas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonsede"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:onClick="conocerSede"
            android:text="Sede" />

        <Button
            android:id="@+id/buttoncontactanos"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Contactanos" />
    </LinearLayout>

</LinearLayout>